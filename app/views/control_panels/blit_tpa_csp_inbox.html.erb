<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>
<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" href="bootstrap.css">
		<link rel="stylesheet" href="control_panel.scss">
		
		<TITLE>Admin</TITLE>

	</head>
	<body>
	<center>
		<h1>Listing File Uploads</h1>
	</center>
  <br />
  <br />
	<div class="row">
		<br>
		<%= render 'sidebar' %>
	<div class="col-md-3 col-sm-3 col-lg-3">
    </div>
    <div class="col-md-3 col-sm-3 col-lg-3">
    </div>
    <div class="col-xs-12 col-sm-6 col-md-8">
    <br><br>

		<table class = "table table-bordered table-striped">
  		<thead>
    	<tr>
          <th>Id</th>
      		<th>Status Code</th>
      		<th>File id</th>
      		<th colspan="1"></th>
    	</tr>
  		</thead>

  		<tbody>
    		<% @messages.each do |message| %>
      		<tr>
            <td><%= message.id %></td>
        	<td><%= message.status_code%></td>
		    <td><%= message.file_upload_id%></td>
       		<td><%= link_to 'Delete',  delete_message_control_panel_path(@messages,:msgid =>message.id), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %></td>
      		</tr>
    		<% end %>
  		</tbody>
		</table>
	</div>
	</div>
	</body>
	</html>