<!DOCTYPE html>
<html>
<head>
    <title><%= @user.first_name.upcase %></title>
     <%= stylesheet_link_tag    'application','users.scss' %>
  
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="container">
    <div class="row">
        <div class="col-sm-10"><h1>My Library</h1></div>
    </div>
    <div class="row">
        <div class="col-sm-12">
        <nav class="navbar navbar-inverse">
          <ul class="nav navbar-nav">
            <li class="<%= 'active' if params[:show] == 'show' %>"><strong> <%= link_to "Home",user_path(current_user.id)%></strong></li>
            <li class="<%= 'active' if params[:edit] == 'edit' %>"><strong> <%= link_to "New File",new_user_file_upload_path%></strong> </li>
            <li class="<%= 'active' if params[:index] =='index' %>"><strong><%= link_to "View all Files",user_file_uploads_path%></strong> </li>  
            <li><strong><%= link_to "Messages",users_path%></strong> </li> 
          </ul>
        </nav>
         <hr>
        </div>
      </div>
    <%=yield%>   

   
</body>
</html>